<!DOCTYPE html>
<html>
<head>
  <title>FindMyFibre</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
  <%= nav_bar fixed: :top, brand: "Find you fiber ", responsive: true do %>
    <%= menu_group do %>
      <%= menu_item "Superadmin", rails_admin_path %>
      <%= menu_item "Admin", new_admin_session_path %>
      <%= menu_item "User", new_user_session_path %>
    <% end %>
    <%= menu_group pull: :right do %>
      <% if user_signed_in? %>
        <li>
          <%= link_to('Logout', destroy_user_session_path, :method => :delete) %>
        </li>
	    <% elsif admin_signed_in? %>
	      <li>
	        <%= link_to('Logout', destroy_admin_session_path, :method => :delete) %>
	      </li>
	    <% end %>
	  <% end %>
	<% end %>
  <%= yield %>
</body>
</html>
